<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_container"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/button_parent"

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">


        <androidx.cardview.widget.CardView

            android:id="@+id/button_card_parent"
            android:layout_width="wrap_content"

            android:layout_height="20dp"
            android:background="@drawable/notebackground"
            android:textAllCaps="false"
            android:textColor="?attr/colorAccent"
            app:cardCornerRadius="24dp">

            <LinearLayout

                android:id="@+id/button_accent_border2"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/toast_text"
                android:background="@color/button"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/button_click_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seg_center"
                android:clickable="true"
                android:focusable="true">


                <TextView
                    android:id="@+id/toast_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="97dp"
                    android:layout_marginEnd="97dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="This is a custom Toast"
                    android:textColor="?attr/colorAccent"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/button_accent_border"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/toast_text"
                    android:background="@color/button"
                    android:orientation="vertical" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>